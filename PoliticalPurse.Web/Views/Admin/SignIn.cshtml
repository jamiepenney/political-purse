@model PoliticalPurse.Web.Controllers.SignInViewModel

@{
    ViewBag.Title = "The Political Purse - Sign In";
}

<div class="container mt-3">
    <div class="row">
        <h2>Sign in</h2>
    </div>
    <div class="row">
        <form asp-action="DoSignIn">
            <div class="form-group" pp-validation-for="Email" pp-validationerror-class="has-danger">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" class="form-control" autofocus placeholder="Email address" />
                <span class="form-control-feedback" asp-validation-for="Email"></span>
            </div>
            <div class="form-group" pp-validation-for="Password" pp-validationerror-class="has-danger">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span class="form-control-feedback" asp-validation-for="Password"></span>
            </div>
            @if (Model.Failed)
            {
                <p class="form-text text-danger">
                    Your email address or password was incorrect.
                </p>
            }
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
    </div>
</div>